{% extends 'layout.twig' %}

{% block body %}
  <h1>{{ title }}</h1>
  <p>{{ flashMessage }}</p>
<a href="/adresses/create">¡Añadir una nueva publicación!</a>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Apellidos</th>
        <th scope="col">Teléfono de la casa</th>
        <th scope="col">Direccion de la casa</th>
        <th scope="col">Teléfono del trabajo</th>
        <th scope="col">Direccion del trabajo</th>
        <th scope="col">Correo electrónico</th>
        <th scope="col">Editar</th>
        <th scope="col">Borrar</th>
      </tr>
    </thead>
  {% for adress in adresses %}
    <tbody>
      <tr>
        <td>{{adress.Nombre}}</td>
        <td>{{adress.Apellidos}}</td>
        <td>{{adress.TelCasa}}</td>
        <td>{{adress.DireccionCasa}}</td>
        <td>{{adress.TelTrabajo}}</td>
        <td>{{adress.DireccionTrabajo}}</td>
        <td>{{adress.Correo}}</td>
        <td>{{adress.Apellidos}}</td>
        <td><a href="/adresses/update/{{ adress.id }}">Editar</a></td>
        <td><a href="/adresses/delete/{{ adress.id }}" onclick="return confirm('¿Está seguro?');">Borrar</a></td>
      </tr>
    </tbody>
  {% endfor %}
  </table>
  <a href="/adresses/create">¡Añadir una nueva publicación!</a>
{% endblock %}